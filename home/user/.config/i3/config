set $mod Mod4
set $i3_path /home/alex/.i3

font pango:Terminus 12

set $w1  1:console
set $w2  2:network
set $w3  3:devel
set $w9  9:media
set $w10 10:admin

assign [class="^Firefox$"]      → $w2
assign [class="^Emacs$"]        → $w3
assign [class="^mpv$"]          → $w9
for_window [class="terminal"] border 1pixel

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym ograve resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

set $mode_system System (e) logout, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym e exec --no-startup-id killall X, mode "default"
    bindsym r exec --no-startup-id reboot, mode "default"
    bindsym Shift+s exec --no-startup-id poweroff, mode "default"
    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

floating_modifier $mod
bindsym $mod+Shift+e mode "$mode_system"
bindsym $mod+r mode "resize"
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Return exec urxvt
bindsym $mod+Tab workspace back_and_forth
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split
bindsym $mod+q kill

bindsym $mod+j focus left
bindsym $mod+k focus down
bindsym $mod+l focus up
bindsym $mod+ograve focus right
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

bindsym $mod+Shift+j move left
bindsym $mod+Shift+k move down
bindsym $mod+Shift+l move up
bindsym $mod+Shift+ograve move right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

bindsym $mod+h split h
bindsym $mod+v split v
bindsym $mod+f fullscreen
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# switch to workspace
bindsym $mod+1 workspace $w1
bindsym $mod+2 workspace $w2
bindsym $mod+3 workspace $w3
bindsym $mod+4 workspace $w4
bindsym $mod+5 workspace $w5
bindsym $mod+6 workspace $w6
bindsym $mod+7 workspace $w7
bindsym $mod+8 workspace $w8
bindsym $mod+9 workspace $w9
bindsym $mod+0 workspace $w10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $w1
bindsym $mod+Shift+2 move container to workspace $w2
bindsym $mod+Shift+3 move container to workspace $w3
bindsym $mod+Shift+4 move container to workspace $w4
bindsym $mod+Shift+5 move container to workspace $w5
bindsym $mod+Shift+6 move container to workspace $w6
bindsym $mod+Shift+7 move container to workspace $w7
bindsym $mod+Shift+8 move container to workspace $w8
bindsym $mod+Shift+9 move container to workspace $w9
bindsym $mod+Shift+0 move container to workspace $w10

bindsym $mod+Ctrl+l exec i3lock -i ~/.local/data/locked.png
bindsym XF86ScreenSaver       exec "i3lock -i ~/.local/data/locked.png"
bindsym XF86AudioRaiseVolume  exec "amixer sset Master '5%+'"
bindsym XF86AudioLowerVolume  exec "amixer sset Master '5%-'"
bindsym XF86AudioMute         exec "amixer sset Master toggle"
bindsym XF86AudioMicMute      exec "amixer sset Capture toggle"
bindsym XF86MonBrightnessUp   exec "~/.local/bin/backlight.sh +"
bindsym XF86MonBrightnessDown exec "~/.local/bin/backlight.sh -"
bindsym XF86AudioPlay         exec "mocp -U"
bindsym XF86AudioStop         exec "mocp -P"
bindsym XF86AudioNext         exec "mocp -f"
bindsym XF86AudioPrev         exec "mocp -r"
bindsym $mod+d exec --no-startup-id i3-dmenu-desktop --dmenu="/usr/bin/dmenu -fn 'xft:Hermit:pixelsize=10' -nb '#191919' -nf '#9ac0cd' -sb '#191919' -sf '#bf3f34' -p 'search app >> '"

bar {
        tray_output primary
        position bottom
	status_command i3status -c ~/.config/i3/i3status.conf
        colors {
	    background         #111111
            statusline         #CCCCCC
            focused_workspace  #000000 #888888
            active_workspace   #cccccc #222222
            inactive_workspace #555555 #222222
            urgent_workspace   #ffffff #900000
        }
}

client.unfocused         #222222 #111111 #aaaaaa #2e9ef4
client.focused           #222222 #888888 #000000 #2e9ef4

## Autostart section
exec --no-startup-id emacs
exec --no-startup-id firefox
exec --no-startup-id xsetroot -bg black
exec --no-startup-id setxkbmap -layout "us,ru" -option "grp:caps_toggle,grp_led:caps"
exec --no-startup-id sudo iptables -A INPUT -m tcp -p tcp --dport 22 -j REJECT
exec --no-startup-id sudo iptables -A INPUT -m tcp -p tcp --dport 80 -j REJECT
exec --no-startup-id sudo iptables -A INPUT -m tcp -p tcp --dport 3389 -j REJECT
exec --no-startup-id sudo iptables -A INPUT -m tcp -p tcp --dport 9999 -j REJECT
